generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // tu URI de Atlas/Vercel
}

model Guest {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  message   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("guests")        
  @@index([createdAt])   
}